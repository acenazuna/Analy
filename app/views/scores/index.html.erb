<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
  <div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>Scores</h1>
<%= link_to 'New Score', new_score_path, class: 'btn btn-default' %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <div class="box">


        <%= score.tittle %>
      </div>

        <td><%= @user.name %></td>
        <td><%= simple_format(score.chord) %></td>
        <td><%= link_to 'Show', score, class: 'btn btn-default' %></td>


        <td><%= link_to 'Edit', edit_score_path(score), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
